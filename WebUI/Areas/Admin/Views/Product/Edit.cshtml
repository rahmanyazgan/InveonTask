@model WebUI.Models.ProductViewModel

@{
    ViewBag.Title = "Ürün Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-edit"></i> Ürün Düzenle
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">@Html.ActionLink("Ana Sayfa", "Index", "Home")</li>
                <li class="breadcrumb-item">@Html.ActionLink("Ürünler", "Index")</li>
                <li class="breadcrumb-item active" aria-current="page">Düzenle: @Model.Name</li>
            </ol>
        </nav>
    </div>

    <!-- Main Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-edit"></i> Ürün Bilgilerini Düzenle
            </h6>
            <span class="badge badge-info">ID: #@Model.Id</span>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

                if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" role="alert">
                        <h6><i class="fas fa-exclamation-triangle"></i> Lütfen aşağıdaki hataları düzeltin:</h6>
                        @Html.ValidationSummary(true, "", new { @class = "mb-0" })
                    </div>
                }

                <div class="row">
                    <!-- Sol Kolon -->
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-label font-weight-bold">
                                <i class="fas fa-tag text-primary"></i> @Html.DisplayNameFor(model => model.Name) *
                            </label>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "Ürün adını girin", required = "required" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "invalid-feedback d-block" })
                        </div>

                        <div class="form-group">
                            <label class="form-label font-weight-bold">
                                <i class="fas fa-barcode text-primary"></i> @Html.DisplayNameFor(model => model.Barcode)
                            </label>
                            @Html.EditorFor(model => model.Barcode, new { htmlAttributes = new { @class = "form-control", placeholder = "Barkod numarası" } })
                            @Html.ValidationMessageFor(model => model.Barcode, "", new { @class = "invalid-feedback d-block" })
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle"></i> Ürüne ait barkod numarasını girin (isteğe bağlı)
                            </small>
                        </div>

                        <div class="form-group">
                            <label class="form-label font-weight-bold">
                                <i class="fas fa-align-left text-primary"></i> @Html.DisplayNameFor(model => model.Description)
                            </label>
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "4", placeholder = "Ürün açıklaması..." })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "invalid-feedback d-block" })
                        </div>
                    </div>

                    <!-- Sağ Kolon -->
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-label font-weight-bold">
                                <i class="fas fa-cubes text-primary"></i> @Html.DisplayNameFor(model => model.Quantity) *
                            </label>
                            <div class="input-group">
                                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control text-center", type = "number", min = "0", placeholder = "0", required = "required" } })
                                <div class="input-group-append">
                                    <span class="input-group-text">Adet</span>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "invalid-feedback d-block" })
                        </div>

                        <div class="form-group">
                            <label class="form-label font-weight-bold">
                                <i class="fas fa-money-bill-wave text-primary"></i> @Html.DisplayNameFor(model => model.Price) *
                            </label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">₺</span>
                                </div>
                                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control text-right", type = "number", step = "0.1", min = "0", placeholder = "0.00", required = "required" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "invalid-feedback d-block" })
                        </div>

                        <!-- Bilgi Kartı -->
                        <div class="card bg-light">
                            <div class="card-header">
                                <h6 class="m-0"><i class="fas fa-history text-info"></i> Ürün Geçmişi</h6>
                            </div>
                            <div class="card-body">
                                <small class="text-muted">
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Oluşturulma:</strong><br>
                                            @(Model.CreatedDate?.ToString("dd.MM.yyyy HH:mm") ?? "Bilinmiyor")
                                        </div>
                                        <div class="col-6">
                                            <strong>Güncellenme:</strong><br>
                                            @(Model.UpdatedDate?.ToString("dd.MM.yyyy HH:mm") ?? "Hiç güncellenmedi")
                                        </div>
                                    </div>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <!-- Action Buttons -->
                <div class="row">
                    <div class="col-12">
                        <div class="text-center">
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                <i class="fas fa-save"></i> Değişiklikleri Kaydet
                            </button>
                            @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-secondary btn-lg px-4 ml-3" })
                            @Html.ActionLink("Sil", "Delete", new { id = Model.Id }, new { @class = "btn btn-outline-danger px-4 ml-2", onclick = "return confirm('Bu ürünü silmek istediğinizden emin misiniz?')" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        // Price field değerini doğru formatta göster
        var priceField = $('#Price');
        if (priceField.length > 0 && priceField.val()) {
            var currentValue = parseFloat(priceField.val());
            if (!isNaN(currentValue)) {
                priceField.val(currentValue.toString().replace(',', '.'));
            }
        }

        $('#Price').on('blur', function () {
            var value = parseFloat($(this).val());
            if (!isNaN(value)) {
                $(this).val(value.toFixed(2));
            }
        });

        // Form submit öncesi nokta-virgül dönüştürme
        $('form').on('submit', function (e) {
            var form = this;

            if (form.checkValidity() === false) {
                e.preventDefault();
                e.stopPropagation();
            }

            $(form).addClass('was-validated');
        });
    });
</script>