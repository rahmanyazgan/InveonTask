@model WebUI.Models.ProductViewModel

@{
    ViewBag.Title = "Ürün Sil";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-trash-alt text-danger"></i> Ürün Sil
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">@Html.ActionLink("Ana Sayfa", "Index", "Home")</li>
                <li class="breadcrumb-item">@Html.ActionLink("Ürünler", "Index")</li>
                <li class="breadcrumb-item active" aria-current="page">Sil: @Model.Name</li>
            </ol>
        </nav>
    </div>

    <!-- Warning Alert -->
    <div class="alert alert-danger shadow" role="alert">
        <div class="d-flex align-items-center">
            <div class="mr-3">
                <i class="fas fa-exclamation-triangle fa-3x"></i>
            </div>
            <div>
                <h4 class="alert-heading mb-2">?? Dikkat - Silme Ýþlemi!</h4>
                <p class="mb-0">
                    Bu iþlem <strong>geri alýnamaz</strong>. Ürünü sildikten sonra tüm bilgileri kalýcý olarak kaybolacaktýr.
                </p>
            </div>
        </div>
    </div>

    <!-- Product Info Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-danger text-white">
            <h6 class="m-0 font-weight-bold">
                <i class="fas fa-info-circle"></i> Silinecek Ürün Bilgileri
            </h6>
        </div>

        <div class="card-body">
            <div class="row">
                <!-- Sol Kolon - Temel Bilgiler -->
                <div class="col-lg-6">
                    <div class="table-responsive">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td class="font-weight-bold text-gray-600" style="width: 40%;">
                                        <i class="fas fa-hashtag text-primary"></i> ID:
                                    </td>
                                    <td>
                                        <span class="badge badge-secondary px-3 py-2">#@Model.Id</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-gray-600">
                                        <i class="fas fa-tag text-primary"></i> Ürün Adý:
                                    </td>
                                    <td>
                                        <h5 class="mb-0 text-dark">@Model.Name</h5>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-gray-600">
                                        <i class="fas fa-barcode text-primary"></i> Barkod:
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.Barcode))
                                        {
                                            <code class="bg-light p-2 rounded">@Model.Barcode</code>
                                        }
                                        else
                                        {
                                            <span class="text-muted font-italic">Barkod bulunmuyor</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-gray-600">
                                        <i class="fas fa-align-left text-primary"></i> Açýklama:
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.Description))
                                        {
                                            <p class="mb-0">@Model.Description</p>
                                        }
                                        else
                                        {
                                            <span class="text-muted font-italic">Açýklama bulunmuyor</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Sað Kolon - Stok ve Fiyat -->
                <div class="col-lg-6">
                    <div class="table-responsive">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td class="font-weight-bold text-gray-600" style="width: 40%;">
                                        <i class="fas fa-cubes text-primary"></i> Stok Miktarý:
                                    </td>
                                    <td>
                                        @if (Model.Quantity < 10)
                                        {
                                            <span class="badge badge-warning badge-pill px-3 py-2">@Model.Quantity Adet</span>
                                        }
                                        else if (Model.Quantity < 50)
                                        {
                                            <span class="badge badge-info badge-pill px-3 py-2">@Model.Quantity Adet</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success badge-pill px-3 py-2">@Model.Quantity Adet</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-gray-600">
                                        <i class="fas fa-money-bill-wave text-primary"></i> Birim Fiyat:
                                    </td>
                                    <td>
                                        <h5 class="mb-0 text-success font-weight-bold">@Model.Price.ToString("C")</h5>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-gray-600">
                                        <i class="fas fa-calculator text-primary"></i> Toplam Deðer:
                                    </td>
                                    <td>
                                        <h6 class="mb-0 text-info">@((Model.Price * Model.Quantity).ToString("C"))</h6>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-gray-600">
                                        <i class="fas fa-calendar-alt text-primary"></i> Oluþturulma:
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @(Model.CreatedDate?.ToString("dd.MM.yyyy HH:mm:ss") ?? "Bilinmiyor")
                                        </small>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <!-- Confirmation Question -->
            <div class="text-center bg-light p-4 rounded">
                <h5 class="text-dark mb-3">Bu ürünü silmek istediðinizden emin misiniz?</h5>
                <p class="text-muted mb-4">
                    <strong>"@Model.Name"</strong> adlý ürün ve tüm bilgileri kalýcý olarak silinecektir.
                </p>

                <!-- Action Buttons -->
                <div class="btn-group-lg">
                    @using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { @class = "d-inline" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        <button type="submit" class="btn btn-danger btn-lg px-5 mr-3" onclick="return confirm('Son kez soruyorum: Bu ürünü silmek istediðinizden emin misiniz?')">
                            <i class="fas fa-trash-alt"></i> Evet, Kesinlikle Sil
                        </button>
                    }
                    @Html.ActionLink("Ýptal Et", "Index", null, new { @class = "btn btn-success btn-lg px-5" })
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        // Auto-focus cancel button for safety
        $('.btn-success').focus();
        
        // Add additional confirmation on form submit
        $('form').on('submit', function(e) {
            var productName = '@Html.Raw(Model.Name)';
            if (!confirm('UYARI: "' + productName + '" adlý ürün kalýcý olarak silinecektir!\n\nBu iþlemi onaylýyor musunuz?')) {
                e.preventDefault();
                return false;
            }
        });
    });
</script>